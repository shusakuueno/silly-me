<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
      <%= link_to 'user', new_user_path %>
      <ul>
        <% @users.each do |user| %>
          <li>
            <p><%= user.name %></p>
            <%= image_tag user.avatar %>
          </li>
        <% end %>
      </ul>  
      </div>
    </div>
    <%= render 'follows/follow_button', user: @user %>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>"> 全力投稿 <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">最高に面白い人達 <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">愛してくれる仲間達 </a><span class="badge badge-secondary"><%= @count_followers %></span></a></li>
      <li class="nav-item"><a href="<%= favorites_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(favorites_user_path(@user)) %>"> 最高に面白いやつ <span class="badge badge-secondary"><%= @count_favposts %></span></a></li>
    </ul>
    <%= render 'posts/posts', posts: @posts %>
  </div>
</div>